<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Фото -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="My photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ava"
        android:layout_gravity="center" />

    <!-- Ссылка на Telegram -->
    <TextView
        android:id="@+id/tvSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TG: @irongun"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- Список интересов/хобби -->
    <TextView
        android:id="@+id/tvHobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хобби: программирование, музыка, аниме"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- Кнопка Подписаться -->
    <Button
        android:id="@+id/btnSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписаться"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TG url: https://t.me/irongun"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:gravity="center" />

</LinearLayout>